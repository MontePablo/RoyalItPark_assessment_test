<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/col1_300"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.35"
            android:background="@drawable/shape_heading_gradient"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintWidth_percent="0.40"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_heading_gradient_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/textview"
            android:text="Hello"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/textview"
            android:text="Anjali Sharma"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintWidth_percent="0.25"
            app:civ_shadow_color="@color/cardview_shadow_end_color"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.90"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            android:elevation="15dp"
            android:id="@+id/dailyQuotes"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner">
                <LinearLayout
                    android:background="@drawable/img_banner_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/light_white"
                        android:paddingTop="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Quotes"
                        android:textSize="20sp"/>
                    <TextView
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Christmas is a day of meaning and traditions, a special day spent in the warm circle of family and friends"
                        android:textSize="16sp"/>
                </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:textColor="@color/light_white"
            android:id="@+id/ourEvents"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Our Events"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/banner"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.79"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            android:elevation="15dp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"

            app:layout_constraintTop_toBottomOf="@id/ourEvents">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_banner"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dailyQuotes"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Photo Gallery"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/col2_100"
            android:layout_margin="30dp"
            android:id="@+id/viewMoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dailyQuotes"
            app:layout_constraintRight_toRightOf="parent"
            android:text="View more..."/>
        <HorizontalScrollView
            app:layout_constraintTop_toBottomOf="@id/viewMoreBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/three">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_3"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_4"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        app:cardCornerRadius="20dp"
                        android:elevation="15dp"
                        android:layout_margin="10dp"
                        android:layout_width="140dp"
                        android:layout_height="140dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_1"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_2"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_5"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_6"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_7"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_8"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_9"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_10"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_11"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_12"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>